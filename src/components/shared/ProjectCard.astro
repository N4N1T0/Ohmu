---
// Astro Imports
import { Image } from 'astro:assets'

// Utility Imports
import { slugify } from '@/lib/utils'

// Props
export interface Props {
	title: string
	service: string
	images: ImageMetadata[]
}

// Props deconstruction
const { title, service, images } = Astro.props

// splice returns an array with the removed elements, we only want the first two
const [image1, image2, ...rest] = images
---

		<article>
			<a
			href=`/projects/${slugify(title)}`
				class='group space-y-5'
			>
			<div class="overflow-hidden rounded-3xl w-full relative aspect-square">
				<Image
					src={image2}
					alt={`${title} principal picture`}
					title={`${title} principal picture`}
          transition:name={`${slugify(title)}-main`}
					class='object-cover w-full h-full'
				/>
				<Image
					src={image1}
					alt={`${title} mockup website`}
					title={`${title} mockup website`}
					class='absolute object-cover top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100 group-active:opacity-100 duration-1000 transition-opacity'
				/>
			</div>
				<div class="text-left space-y-1 uppercase">
					<h2 class="font-semibold text-charcoal text-sm md:text-xl" >{service}</h2>
					<h1 class='text-2xl md:text-4xl font-bold text-gray-950 tracking-wider' transition:name={`${slugify(title)}-title`}>
						{title}
					</h1>
				</div>
			</a>
		</article>
