---
import { navItems } from '@/constants/site-data'
import MainLogo from '@/assets/Main.svg'
import { Image } from 'astro:assets'
---

<!-- TODO Add Mobile Navbar -->
<header class='bg-white'>
  <div class='mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-8 mt-3 border-b border-navy/30'>
    <div class='flex h-16 items-center justify-betwee pb-3'>
      <div class='flex-1 md:flex md:items-center md:gap-12'>
        <a class='block text-teal-600' href='#'>
          <span class='sr-only'>Home</span>
          <Image src={MainLogo} alt='Main Logo' width={45} height={45} />
        </a>
      </div>

      <div class='md:flex md:items-center md:gap-12'>
        <nav aria-label='Global' class='hidden md:block'>
          <ul class='flex items-center gap-6 text-sm'>
            {
              navItems.map((item) => (
                <li>
                  <a
                    class='text-navy transition-colors duration-150 hover:text-navy/70 uppercase font-semibold'
                    href={item.href}>
                    {item.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>

        <div class='flex items-center gap-4'>
          <div class='sm:flex sm:gap-4'>
            <a
              class='rounded-full bg-navy px-5 py-2.5 text-sm font-medium text-ivory shadow-navy shadow-sm uppercase transition-all duration-150 hover:scale-105 hover:shadow-md'
              href='#'>
              Contacto
            </a>
          </div>

          <div class='block md:hidden'>
            <button
              class='rounded bg-gray-100 p-2 text-gray-600 transition hover:text-gray-600/75'>
              <svg
                xmlns='http://www.w3.org/2000/svg'
                class='h-5 w-5'
                fill='none'
                viewBox='0 0 24 24'
                stroke='currentColor'
                stroke-width='2'>
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  d='M4 6h16M4 12h16M4 18h16'></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
